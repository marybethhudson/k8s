apiVersion: apps/v1
kind: Deployment
metadata:
  name: spring-music-deploy
spec:
  selector:
    matchLabels:
      app: music
  replicas: 2 
  template: 
    metadata:
      labels:
        app: music
    spec:
      containers:
      - name: spring-music-pod
        image: yanivomc/spring-music:latest
        ports:
        - containerPort: 8080
		
---

kind: Service 
apiVersion: v1     
metadata:
  name: hudson-srv
spec:
  type: LoadBalancer
  selector:
    app: music 
  ports:    
    - protocol: TCP
      port: 80
      targetPort: 8080
