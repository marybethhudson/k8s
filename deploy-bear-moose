apiVersion: apps/v1
kind: Deployment
metadata:
  name: deploy-bear-recreate
  labels:
    app: spring-bear
spec:
  replicas: 2
  strategy:
    type: Recreate
  selector:  
    matchLabels:
      app: spring-music
  template:  
    metadata:
      labels:
        app: spring-music
        type: animal
    spec:
      containers:
        - name: springmusic
          image: "supergiantkir/animals:bear"
---

apiVersion: apps/v1
kind: Deployment
metadata:
  name: deploy-moose-recreate
  labels:
    app: spring-moose
spec:
  replicas: 1
  strategy:
    type: Recreate
  selector:  
    matchLabels:
      app: spring-music
  template:  
    metadata:
      labels:
        app: spring-music
        type: animal
    spec:
      containers:
        - name: springmusic
          image: "supergiantkir/animals:moose"

---
kind: Service 
apiVersion: v1 
metadata:
  name: hudson-srv
spec:
  selector:
    app: animal
  type: NodePort
  ports:
    - port: 80
      nodePort: 31111
      targetPort: 80
      protocol: TCP
      name: http-web
  # type: LoadBalancer 
  # ports:          # Map incoming port to target port
  # - name: http-web    # Setting multiple ports listterns 
  #   protocol: TCP
  #   port: 80
  #   targetPort: 80
             
