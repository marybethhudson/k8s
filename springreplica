apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: spring-pod-affinity
  labels:
    app: spring-music
    tier: frontend
spec:
  replicas: 2
  selector:  
    matchLabels:
      app: spring-music
  template:  
    metadata:
      labels:
        app: spring-music
    spec:
      containers:
        - name: springmusic
          image: "yanivomc/spring-music:latest"
